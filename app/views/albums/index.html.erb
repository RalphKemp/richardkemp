<div class="container">
  <div class="row">
    <% @albums.each do |album| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: url('<%= cl_image_path(album.photos.last.path) %>');">
          <%= link_to "#", album_path(album), class: "card-link" %>
        </div>
        <div class="card-description">
          <h2><%= album.name %></h2>
        </div>
      </div>
      <% end %>
  <% if user_signed_in? %>
    <div class="new-button">
      <button> <%= link_to "create new album", new_album_path %> </button>
    </div>
    <% end %>
  </div>
</div>

<div id="go-to-top-button" class="hidden-xs hidden-sm hidden-md hidden-lg">
  <button onclick="topFunction()" title="Go to top"> GO TO TOP </button>
</div>

