<div class="center-container">
    <%= simple_form_for [ @album, @painting ] do |f|  %>
    <div class="form-inputs">
      <%= f.label :name %> <br>
      <%= f.text_field :name %>
      <%= f.input :description %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Add" %>
    </div>
  <% end %>
</div>
