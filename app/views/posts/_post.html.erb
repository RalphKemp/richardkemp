<div class="col-xs-12 col-sm-12 col-lg-12">
  <div class="blog-post">
    <div class="blog-card-pic-header-and-date">

      <div class="blog-post-date">
        <p><%= post.created_at.strftime("%d %b. %Y") %></p>
      </div>
      <div class="blog-post-title">
        <h1><%= post.title %></h1>
      </div>

    </div>

    <div class="blog-card-text-section">

      <div class="blog-post-content">
        <p><%= post.content %></p>
      </div>
      <div class="blog-post-category-name">
        <p><%= post.category.name %></p>
      </div>
      <%= link_to "", post_path(post), class: "blog-post-link" %>
    </div>

  </div>
</div>







